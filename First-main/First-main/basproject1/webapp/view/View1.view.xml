<mvc:View controllerName="namespace.basproject1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tab="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
   <Page title="model">
		<content>

			<tab:Table rows="{dModel>/empTable}" 
			selectionMode="Single" rowSelectionChange="onRowPress">
				<tab:columns>
						<tab:Column>
					<tab:label>
						<Label text="empId"></Label>
					</tab:label>
					<tab:template>
						<Text text="{dModel>empId}"></Text>
					</tab:template>
				</tab:Column>
				
					<tab:Column>
					<tab:label>
						<Label text="empName"></Label>
					</tab:label>
					<tab:template>
						<Input value="{path:'dModel>empName',
						               formatter:'.someVar.upperCase'}"></Input>
					</tab:template>
				</tab:Column>
				
					<tab:Column>
					<tab:label>
						<Label text="Salary"></Label>
					</tab:label>
					<tab:template>
						<Text text="{parts:[{path:'dModel>empSalary'},{path:'dModel>Currency'}],
					             	formatter:'.someVar.formatCurrency'}"></Text>
					</tab:template>
				</tab:Column>
				
					<!-- <tab:Column>
					<tab:label>
						<Label text="Currency"></Label>
					</tab:label>
					<tab:template>
						<Text text="{dModel>Currency}"></Text>
					</tab:template>
				</tab:Column>
				 -->
					<tab:Column>
					<tab:label>
						<Label text="Gender"></Label>
					</tab:label>
					<tab:template>
                    <Image src="{dModel>Gender}" width="30px" height="30px"></Image>			
					</tab:template>
				</tab:Column>
				
					<tab:Column>
					<tab:label>
						<Label text="smoker"></Label>
					</tab:label>
					<tab:template>
						<CheckBox selected ="{dModel>smoker}"></CheckBox>
					</tab:template>
				</tab:Column>
				
				<tab:Column>
					<tab:label>
						<Label text="MStatus"></Label>
					</tab:label>
					<tab:template>
		
						<Select selectedKey="{dModel>mStatus}">
							<items>
								<core:Item key="M" text="Married"></core:Item>
								<core:Item key="S" text="Single"></core:Item>
							</items>
						</Select>
					</tab:template>
				</tab:Column>
			</tab:columns>	
			</tab:Table>

			<f:SimpleForm editable="true" id="idSimple">
				<f:content>
					<Label text="EmpId"></Label>
					<Input id="idInp1" required="true" value="{dModel>empId}" enabled="{=${dModel>empSalary}>5000?false:true}"></Input>

					<Label text="EmpName"></Label>
					<Input id="idInp2" value="{dModel>empName}"></Input>

					<Label text="Salary"></Label>
					<Input id="idInp3" value="{dModel>empSalary}"></Input>

					<Label text="Gender"></Label>
					<Input id="idInp4" value="{dModel>Gender}"></Input>

					<Button text="get magic button" press="onGetMagicPress"></Button>
					<HBox id="idMagic"></HBox>
					<Button text="Flip" press="onFlip"/>

					
					
				</f:content>
			</f:SimpleForm>
		<HBox>
		<Button text="insert Model 2Data" press="onInsertModel2Data"></Button>
        <Button text="insert Str" press="onInsertStr"></Button>
		</HBox>
		</content>
 
 <Button text="BAS Button"></Button>
    </Page>
</mvc:View>